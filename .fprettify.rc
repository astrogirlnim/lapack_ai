# fprettify configuration for LAPACK AI Modernization
# Conservative settings for legacy Fortran compatibility

[fprettify]
# Indentation settings
indent = 2
strict-indent = false

# Line length and formatting
line-length = 132
disable-indent-mod = true

# Whitespace handling (conservative)
whitespace = 1
whitespace-assignment = true
whitespace-decl = true
whitespace-relational = true
whitespace-logical = true
whitespace-plusminus = false  # Disable for legacy expressions
whitespace-multdiv = false    # Disable for legacy expressions

# Legacy compatibility settings
enable-decl = false           # Disable declaration formatting for legacy code
disable-fypp = true           # Disable fypp preprocessing
case = 0                      # Don't change case

# Error handling
silent = false
diff = false
